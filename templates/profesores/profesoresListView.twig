{% include "main/header.twig" %}
{% include "main/topNav/topNav.twig" %}

<body>

    <div class="container">
        <h1>Profesores/Personal</h1>
        <br />

        <h4 style='display: inline-block; margin-right: 15px;'>Buscar profesor/personal: </h4>
        <input style='width: 25%; display: inline-block; min-width: 250px;' id='busca_prof' class='form-control' type='text' placeholder='Buscar Profesor/Personal...' autocomplete='off'>
        <label for='busca_prof'> <span style='font-size: 20px;' class='fa fa-search'></span></label>
        <br />

        <div class='table-responsive'>
        <br />

            <table id='tabla_profesores' class='table table-hover table-striped responsiveTable'>
                <thead class='thead-dark'>
                <tr>
                    <th>Nombre</th>
                    <th>Iniciales</th>
                    <th>Activo</th>
                    <th>Sustituido</th>
                    <th>Horario</th>
                    <th>Editar</th>
                    <th>Asistencias</th>
                    <th>Desactivar / Activar</th>
                    <th>Baja / Alta</th>
                    <th>Reset. Contrase√±a</th>
                </tr>
                </thead>
                <tbody>

                {% for profesor in profesores %}
                    {% set id = profesor.id %}
                    {% set username = profesor.username %}
                    {% set name = profesor.name %}
                    {% set type = profesor.type %}
                    {% set active = profesor.active %}
                    {% set sustituted = profesor.sustituted %}
                    {% set status = profesor.status %}

                    {% include "profesores/profesorRow.twig" %}
                {% endfor %}

                </tbody>
            </table>

        </div>
    </div>

    <script src="media/js/Profesores/filtro_prof.js"></script>
    <script src="media/js/Profesores/filtro_asistencias.js"></script>
    <script src="media/js/Profesores/profesores.js"></script>
    <script src="media/js/Profesores/update_marcajes.js"></script>
    <script src="media/js/Profesores/editar_profesor.js"></script>
    <script src="media/js/Profesores/baja.js"></script>

</body>

{% include "main/footer.twig" %}
